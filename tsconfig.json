{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["DOM", "ES2022"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "./compiledTypescript"
    },
  "include": ["typescript/*.ts"],   
  "exclude": ["node_modules", "compiledTypescript"]
  }
  